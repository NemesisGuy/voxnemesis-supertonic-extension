{
    "manifest_version": 3,
    "name": "VoxNemesis TTS (Supertonic Edition)",
    "version": "0.1.0",
    "description": "Local-first Chrome extension powered by the Supertonic ONNX engine.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "storage",
        "offscreen"
    ],
    "host_permissions": [
        "https://huggingface.co/Supertone/supertonic/**"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "VoxNemesis TTS (Supertonic)",
        "default_icon": {
            "16": "icons/optimized/Nemesis_Logo_Icon_16.png",
            "32": "icons/optimized/Nemesis_Logo_Icon_32.png",
            "48": "icons/optimized/Nemesis_Logo_Icon_48.png",
            "128": "icons/optimized/Nemesis_Logo_Icon_128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/optimized/Nemesis_Logo_Icon_16.png",
        "48": "icons/optimized/Nemesis_Logo_Icon_48.png",
        "128": "icons/optimized/Nemesis_Logo_Icon_128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}